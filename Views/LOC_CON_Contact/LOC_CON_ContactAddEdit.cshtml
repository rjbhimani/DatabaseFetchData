@{
    ViewData["Title"] = "Contact Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@model LOC_CON_ContactModel

<div class="row">
    <div class="col-md-12">
        <h2>@TempData["message"]</h2>
        &nbsp;
        <form method="post" asp-controller="LOC_CON_Contact" asp-action="Save">
            @Html.HiddenFor(x=>x.ContactID)
            <div class="from-group">
                <label>Country Name</label>
                <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.LOC_CountryList,"CountryID","CountryName"))" onchange="(stateChange())">
                    <option value="">Select Country</option>
                </select>
            </div>
            <div class="from-group">
                <label>State Name</label>
                <select class="form-control" asp-for="StateID" asp-items="@(new SelectList(ViewBag.LOC_StateList,"StateID","StateName"))" onchange="(cityChange())">
                    <option value="">Select State</option>
                </select>
            </div>
            <div class="from-group">
                <label>City Name</label>
                <select class="form-control" asp-for="CityID" asp-items="@(new SelectList(ViewBag.LOC_CityList,"CityID","CityName"))">
                    <option value="">Select City</option>
                </select>
            </div>
            <div class="from-group">
                <label>ContactCategory Name</label>
                <select class="form-control" asp-for="ContactCategoryID" asp-items="@(new SelectList(ViewBag.LOC_ContactCategoryList,"ContactCategoryID","ContactCategoryName"))">
                    <option value="">Select ContactCategory</option>
                </select>
            </div>
            <div class="from-group">
                <label>Contact Name</label>
                <input type="text" class="from-Control" placeholder="Enter Contact Name" asp-for="ContactName" />
            </div>
           @* <div class="from-group">
                <label>Country ID</label>
                <input type="text" class="from-Control" placeholder="Enter Country ID" asp-for="CountryID" />
            </div>
            <div class="from-group">
                <label>State ID</label>
                <input type="text" class="from-Control" placeholder="Enter State ID" asp-for="StateID" />
            </div>
            <div class="from-group">
                <label>City ID</label>
                <input type="text" class="from-Control" placeholder="Enter State Code" asp-for="CityID" />
            </div>*@
            <div class="from-group">
                <label>Address</label>
                <input type="text" class="from-Control" placeholder="Enter Address" asp-for="Address" />
            </div>
            <div class="from-group">
                <label>PinCode</label>
                <input type="text" class="from-Control" placeholder="Enter  PinCode" asp-for="PinCode" />
            </div>
            <div class="from-group">
                <label>Mobile</label>
                <input type="text" class="from-Control" placeholder="Enter Contact Mobile" asp-for="Mobile" />
            </div>
            <div class="from-group">
                <label>AlternetContact</label>
                <input type="text" class="from-Control" placeholder="Enter Contact AlternetContact" asp-for="AlternetContact" />
            </div>
            <div class="from-group">
                <label>Email</label>
                <input type="text" class="from-Control" placeholder="Enter Contact Email" asp-for="Email" />
            </div>
            <div class="from-group">
                <label>BirthDate</label>
                <input type="text" class="from-Control" placeholder="Enter BirthDate" asp-for="BirthDate" />
            </div>
            <div class="from-group">
                <label>LinkedIn</label>
                <input type="text" class="from-Control" placeholder="Enter LinkedIn" asp-for="LinkedIn" />
            </div>
            <div class="from-group">
                <label>Twitter</label>
                <input type="text" class="from-Control" placeholder="Enter Twitter" asp-for="Twitter" />
            </div>
            <div class="from-group">
                <label>Insta</label>
                <input type="text" class="from-Control" placeholder="Enter Insta" asp-for="Insta" />
            </div>
            <div class="from-group">
                <label>Creation Date</label>
                <input type="date" class="from-Control" placeholder="Enter Creation Date" asp-for="CreationDate" />
            </div>
            <div class="from-group">
                <label>Modification Date</label>
                <input type="date" class="from-Control" placeholder="Enter Modification Date" asp-for="ModificationDate" />
            </div>
            </hr>
            <input type="submit" />
            <button asp-controller="LOC_CON_Contact" asp-action="Add">Clear</button>
            <button asp-controller="LOC_CON_Contact" asp-action="Index">Back to ContactList</button>
        </form>
    </div>

</div>

<script>
    function stateChange() {
        var CountryID = $("#CountryID").val();

        if (CountryID !== "") {
            $("#StateID").empty();
            $("#StateID").append($("<option></option>").val("").html("Select State"));
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("DropDownByState","LOC_City")" + "?&CountryID=" + CountryID,
                    data: {},
                    dataType: "json",
                    success: function (Result) {
                        $.each(Result,
                            function (key, value) {
                                $("#StateID").append($("<option></option>").val(value.stateID).html(value.stateName));
                            });
                    },
                    error: function (r) {
                        alert("Error while loading combobox.");
                    }
                });
        } else {
            $("#StateID").empty();
            $("#StateID").append($("<option></option>").val("").html("Select State"));

        }
    }
</script>

<script>
    function cityChange() {
        var StateID = $("#StateID").val();

        if (StateID !== "") {
            $("#CityID").empty();
            $("#CityID").append($("<option></option>").val("").html("Select City"));
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("DropDownByCity","LOC_CON_Contact")" + "?&StateID=" + StateID,
                    data: {},
                    dataType: "json",
                    success: function (Result) {
                        $.each(Result,
                            function (key, value) {
                                $("#CityID").append($("<option></option>").val(value.cityID).html(value.cityName));
                            });
                    },
                    error: function (r) {
                        alert("Error while loading combobox.");
                    }
                });
        } else {
            $("#CityID").empty();
            $("#CityID").append($("<option></option>").val("").html("Select City"));

        }
    }
</script>