@model LOC_StateModel

<div class="row">
    <div class="col-md-12">
        <h2>@TempData["CountryInsertMsg"]</h2>
        <form method="post" asp-controller="LOC_State" asp-action="Save">
            @Html.HiddenFor(x=>x.StateID)
            <div class="from-group">
                <label>Country Name</label>
                <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                    <option value="">Select Country</option>
                </select>
            </div>
            <div class="from-group">
                <label>State Name</label>
                <input type="text" class="from-Control" placeholder="Enter State Name" asp-for="StateName" />
            </div>
            <div class="from-group">
                <label>State Code</label>
                <input type="text" class="from-Control" placeholder="Enter State Code" asp-for="StateCode" />
            </div>
            <div class="from-group">
                <label>Creation Date</label>
                <input type="date" class="from-Control" placeholder="Enter Creation Date" asp-for="CreationDate" />
            </div>
            <div class="from-group">
                <label>Modification Date</label>
                <input type="date" class="from-Control" placeholder="Enter Modification Date" asp-for="ModificationDate" />
            </div>
            </hr>
            <input type="submit" />
            <button asp-controller="LOC_State" asp-action="Add">Clear</button>
            <button asp-controller="LOC_State" asp-action="Index">Back to StateList</button>
        </form>
    </div>

</div>
